<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--toDegrees0~359防止卡顿-->
    <!--pivotXY设置旋转中心点为控件中心-->
    <!--duration控制每一圈持续的时间-->
    <!--repeatCount设置不断旋转-->
    <rotate
        android:fromDegrees="0"
        android:toDegrees="359"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="2000"
        android:repeatCount="-1" />
</set>